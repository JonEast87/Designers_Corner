<%- include("partials/_header") %>

    <br>

    <div class="card">
        <form action="/portfolios/<%= portfolio.title %>?_method=PATCH" method="POST">
            <div class="card-body">
                <h5 class="card-title">Edit your Portfolio</h5>

                <div class="form-check">
                    <label for="title" class="form-label">Portfolio Title</label>
                    <input id="title" name="title" type="text" class="form-control" value="<%= portfolio.title %>" autofocus>
                </div>

                <div class="form-check">
                    <label for="headerImage" class="form-label">Portfolio Image</label>
                    <input id="headerImage" name="headerImage" type="text" class="form-control" value="<%= portfolio.headerImage %>">
                </div>

                <div class="form-check">
                    <label for="contextImage" class="form-label">Image One of Three</label>
                    <input id="contextImage" name="contextImage" type="text" class="form-control" value="<%= portfolio.contextImage %>">
                </div>

                <div class="form-check">
                    <label for="contextImage2" class="form-label">Image Two of Three</label>
                    <input id="contextImage2" name="contextImage2" type="text" class="form-control" value="<%= portfolio.contextImage2 %>">
                </div>

                <div class="form-check">
                    <label for="contextImage3" class="form-label">Image Three of Three</label>
                    <input id="contextImage3" name="contextImage3" type="text" class="form-control" value="<%= portfolio.contextImage3 %>">
                </div>

                <div class="form-check">
                    <label for="live" class="form-label">Live Demo</label>
                    <input id="live" name="live" type="text" class="form-control" value="<%= portfolio.url %>">
                </div>

                <div class="form-check">
                    <label for="tags" class="form-label">Skill Tags</label>
                    <input id="tags" name="tags" type="text" class="form-control" placeholder="Fintech, Adobe, VSCode" value="<%= portfolio.tags.join(", ") %>">
                </div>

                <br>

                <div class="form-check">
                  <span class="input-group-text">With textarea</span>
                  <textarea name="description" class="form-control" aria-label="With textarea"><%= portfolio.description %></textarea>
                </div>

                <br>

                <div class="form-check">
                    <input type="submit" value="Add Portfolio" class="btn btn-primary btn-block">
                </div>
            </div>
        </form>
    </div>
