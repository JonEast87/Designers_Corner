<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
        <title>Designer's Corner</title>
        <link href="../../css/stylesheet.css" type="text/css" rel="stylesheet">
        <script src="https://kit.fontawesome.com/2453f003ac.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
        <link rel="stylesheet" href="https://kit.fontawesome.com/2453f003ac.css" crossorigin="anonymous">
    </head>
    <body>

    <nav class="navbar is-link" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                Designer's Corner
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div class="navbar-menu">
            <div class="navbar-end">
                <% if (currentUser) { %>
                    <a class="navbar-item action-button" href="/add"><i class="fa-regular fa-folder-open"></i></a>
                    <a class="navbar-item action-button" href="/users/<%= currentUser.username %>"><i class="fa-regular fa-user"></i></a>
                    <a class="navbar-item action-button" href="#"><i class="fa-regular fa-building"></i></a>
                    <a class="navbar-item" href="/logout">Sign Out</a>
                <% } else { %>
                    <a class="" href="/login">Sign In</a>
                <% } %>
            </div>
        </div>
      </div>
    </nav>

    <div>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% }); %>

        <% infos.forEach(function(info) { %>
            <div class="alert alert-info" role="alert">
                <%= info %>
            </div>
        <% }); %>